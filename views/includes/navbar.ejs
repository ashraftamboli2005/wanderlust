<style>
  .navbar {
    position: relative;
  }

  /* CENTER SEARCH ABSOLUTELY */
  .nav-search {
    position: absolute;
    left: 50%;
    transform: translateX(-50%);
  }

  .search-inp {
    border-radius: 25px;
    padding: 0.5rem 1rem;
    font-size: 0.8rem;
    width: 260px;
  }

  .search-btn {
    background-color: #fe424d;
    color: #fff;
    border-radius: 25px;
    padding: 0.5rem 1.2rem;
    white-space: nowrap;
  }

  .search-btn:hover {
    background-color: #fe424d;
    color: #fff;
  }

  .search-btn i {
    margin-right: 0.4rem;
  }

  /* Hide center search on small screens */
  @media (max-width: 768px) {
    .nav-search {
      position: static;
      transform: none;
      margin: 0.8rem auto;
    }
  }
</style>

<nav class="navbar navbar-expand-md navbar-light bg-light border-bottom sticky-top">
  <div class="container-fluid">

    <!-- LEFT -->
    <a class="navbar-brand text-dark" href="/listings">
      <i class="fa-solid fa-compass"></i>
    </a>

    <button
      class="navbar-toggler"
      type="button"
      data-bs-toggle="collapse"
      data-bs-target="#navbarNavAltMarkup"
    >
      <span class="navbar-toggler-icon"></span>
    </button>

    <!-- CENTER SEARCH (TRUE CENTER) -->
    <div class="nav-search d-none d-md-block">
      <form
  class="d-flex align-items-center"
  role="search"
  action="/listings/search"
  method="GET"
>
  <input
    class="form-control me-2 search-inp"
    type="search"
    name="q"
    placeholder="Search destinations"
    required
  />
  <button class="btn search-btn" type="submit">
    <i class="fa-solid fa-magnifying-glass"></i>Search
  </button>
</form>

    </div>

    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <!-- LEFT LINKS -->
      <div class="navbar-nav">
        <a class="nav-link text-dark" href="/listings">Explore</a>
      </div>

      <!-- RIGHT LINKS -->
      <div class="navbar-nav ms-auto">
        <a class="nav-link text-dark" href="/listings/new">Airbnb your home</a>

        <% if (!currUser) { %>
          <a class="nav-link" href="/signup"><b>Sign up</b></a>
          <a class="nav-link" href="/login"><b>Log in</b></a>
        <% } %>

        <% if (currUser) { %>
          <a class="nav-link" href="/logout">Log out</a>
        <% } %>
      </div>
    </div>
  </div>
</nav>

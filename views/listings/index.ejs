<% layout("/layouts/boilerplate") -%>

<style>
  /* FILTER + TOGGLE BAR */
  .filter-bar {
    display: flex;
    align-items: center;
    justify-content: space-between;
    margin: 1rem 0 2rem;
  }

  /* FILTERS */
  #filters {
    display: flex;
    flex-wrap: wrap;
    gap: 3rem;
  }

  .filter {
    text-align: center;
    cursor: pointer;
    opacity: 0.7;
    padding: 0.3rem 0.5rem;
    transition: opacity 0.2s ease;
  }

  .filter:hover {
    opacity: 1;
  }

  .filter i {
    font-size: 1.1rem;
    display: block;
    margin-bottom: 0.3rem;
  }

  .filter p {
    font-size: 0.75rem;
    margin: 0;
  }

  /* TAX TOGGLE (AIRBNB STYLE) */
  .tax-pill {
    display: flex;
    align-items: center;
    gap: 0.8rem;
    padding: 0.5rem 1rem;
    border: 1px solid #ddd;
    border-radius: 999px;
    font-size: 0.85rem;
    background: #fff;
    white-space: nowrap;
  }

  .tax-pill input {
    width: 34px;
    height: 18px;
    cursor: pointer;
  }
   .card-text b {
    color: #000;
    font-weight: 600;
  }

  .card-text {
    color: #000;
    font-weight: 600;
  }

  .card-text .tax-info {
    font-weight: 500;}
</style>

<!-- FILTER BAR (ICONS + TOGGLE SAME LINE) -->
<div class="filter-bar">
  <div id="filters">
    <div class="filter">
      <i class="fa-solid fa-fire"></i>
      <p>Trending</p>
    </div>
    <div class="filter">
      <i class="fa-solid fa-bed"></i>
      <p>Rooms</p>
    </div>
    <div class="filter">
      <i class="fa-solid fa-house"></i>
      <p>Homes</p>
    </div>
    <div class="filter">
      <i class="fa-solid fa-water-ladder"></i>
      <p>Pool</p>
    </div>
    <div class="filter">
      <i class="fa-solid fa-mountain"></i>
      <p>Mountains</p>
    </div>
    <div class="filter">
      <i class="fa-solid fa-umbrella-beach"></i>
      <p>Beach</p>
    </div>
    <div class="filter">
      <i class="fa-solid fa-tree"></i>
      <p>Nature</p>
    </div>
    <div class="filter">
      <i class="fa-solid fa-city"></i>
      <p>City</p>
    </div>
    <div class="filter">
      <i class="fa-solid fa-campground"></i>
      <p>Camping</p>
    </div>
  </div>

  <!-- TAX TOGGLE -->
  <div class="tax-pill">
    <span>Display total after taxes</span>
    <input type="checkbox" id="flexSwitchCheckDefault" />
  </div>
</div>

<!-- LISTINGS -->
<div class="row row-cols-lg-4 row-cols-md-2 row-cols-sm-1">
  <% for (let listing of allListings) { %>
    <a href="/listings/<%= listing._id %>" class="listing-link">
      <div class="card col listing-card">
        <img
          src="<%= listing.image && listing.image.url
            ? listing.image.url
            : 'https://res.cloudinary.com/demo/image/upload/sample.jpg' %>"
          class="card-img-top"
          style="height:20rem;"
        />

        <div class="card-img-overlay"></div>

        <div class="card-body">
          <p class="card-text">
            <b><%= listing.title %></b><br />
            ₹ <%= listing.price.toLocaleString("en-IN") %> / night
            <span class="tax-info" style="display:none;">
              &nbsp;• ₹ <%= Math.round(listing.price * 1.18).toLocaleString("en-IN") %> total
            </span>
          </p>
        </div>
      </div>
    </a>
  <% } %>
</div>

<!-- TOGGLE SCRIPT -->
<script>
  const taxSwitch = document.getElementById("flexSwitchCheckDefault");

  taxSwitch.addEventListener("change", () => {
    const taxInfo = document.getElementsByClassName("tax-info");

    for (let info of taxInfo) {
      info.style.display = taxSwitch.checked ? "inline" : "none";
    }
  });
</script>
